generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Categoria {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  nome     String
  prodotti Prodotto[]
  @@map("categorie")
}

model Prodotto {
  barcode     String    @id @map("_id") @db.String
  nome        String
  descrizione String?
  prezzo      Float
  categoriaId String    @db.ObjectId
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  @@map("prodotti")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
  @@map("users")
}